{
  "name": "jest-badges-action",
  "description": "Generates coverage badges and pushes them to the repo",
  "version": "1.0.0",
  "main": "lib/main.js",
  "repository": "https://github.com/jpb06/jest-badges-action.git",
  "author": "jpb06 <jpb.06@outlook.com>",
  "license": "MIT",
  "scripts": {
    "cleanDist": "rimraf ./dist && rimraf ./lib",
    "build": "yarn cleanDist && tsc --project tsconfig.prod.json && ncc build",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:dev": "jest --watchAll --coverage",
    "test:ci": "jest --ci --runInBand",
    "badges": "generateBadges"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0",
    "fs-extra": "^9.1.0",
    "node-jest-badges": "^1.0.17"
  },
  "devDependencies": {
    "@jest/types": "^26.6.2",
    "@octokit/types": "^6.13.0",
    "@types/babel__core": "^7.1.14",
    "@types/fs-extra": "^9.0.11",
    "@types/graceful-fs": "^4.1.5",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/normalize-package-data": "^2.4.0",
    "@types/prettier": "^2.2.3",
    "@types/stack-utils": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "@vercel/ncc": "^0.27.0",
    "eslint": "^7.24.0",
    "eslint-plugin-jest": "^24.3.5",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.2",
    "mime-types": "^2.1.30",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  }
}